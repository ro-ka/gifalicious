/**
 * Avatar
 */
.avatar
  background-image: url('')
  width: emCalc(25px)
  height: emCalc(25px)
  font-size: emCalc(25px)
  border-radius: 50%
  background-size: cover
  display: inline-block
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  vertical-align: top
  background-repeat: no-repeat
  background-position: center 50%
  background-color: rgba(black, 0.5)

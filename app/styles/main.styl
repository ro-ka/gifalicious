/**
 * Button
 */
.button
  font-size: 1rem
  font-family: inherit
  line-height: 2.3em
  position: relative
  display: inline-block
  cursor: pointer
  color: $white
  font-weight: 700
  border: medium none
  border-radius: 4px
  outline: medium none
  text-decoration: none
  padding: 0 1em
  background-color: $theme
  text-align: center
  text-shadow: rgba(0, 0, 0, 0.1) 0 1px 0
  transition: background-color .2s ease-in-out
  &:hover, &:focus
    background-color: darken($theme, 10%)
    text-decoration: none
    color: $white
  &--secondary
    background-color: darken($white, 25%)
    color: $white
  &--success
    background-color: $success
  &--alert
    background-color: $alert
  &--disabled
    background-color: darken($white, 2%)
    color: darken($white, 20%)
  &--loading
    .button__text
      visibility: hidden
    &:before
      content: ''
      display: block
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background: url('/images/loading.small.gif') no-repeat center center

/**
 * A message
 */
.message
  font-weight: 700
  text-transform: uppercase
  border-bottom-style: solid
  border-bottom-width: 0.1em
  &--error
    color: $alert
    border-bottom-color: $alert
  &--success
    color: $success
    border-bottom-color: $success
  &--hidden
    display: none

/**
 * Avatar
 */
.avatar
  background-image: url('http://photos1.meetupstatic.com/photos/member/1/1/3/c/thumb_147484412.jpeg')
  width: emCalc(25px)
  height: emCalc(25px)
  font-size: emCalc(25px)
  border-radius: 50%
  background-size: cover
  display: inline-block
  text-indent: 100%
  white-space: nowrap
  overflow: hidden
  vertical-align: top
  background-repeat: no-repeat
  background-position: center 50%
  background-color: rgba(black, 0.5)

/**
 * Site header
 */
.site-header
  font-size: 1rem
  padding: .4em 0
  background: $header

.logo
  font-size: 2em
  font-weight: 400
  font-family: 'Grand Hotel', Helvetica, Arial, sans-serif
  text-shadow:0 1px 1px rgba($black, 0.5)
  color: $white
  text-decoration: none
  &:hover, &:focus
    color: darken($white, 10%)

.gif-nav
  font-size: 1rem
  text-align: center
  &__item
    height: 100%
    padding: 0
    display: inline-block
    &__link
      display: block
      height: 100%
      text-align: center
      color: $white
      font-weight: 700
      &:hover, &:focus
        color: $white
        background: darken($header, 20%)
  &--integrated
    margin: -.4em 0
    height: 3.5em
    &__item
      &__link
        line-height: 3.5em
        margin: 0 .2em
        padding: 0 2em
  &--independent
    height: auto
    background: lighten($header, 5%)
    &__item
      &__link
        padding: .4em 0
        &:hover, &:focus
          background: $header

.user-nav
  font-size: 1rem
  position: relative
  display: inline-block
  &--signed-out
    .user-nav--sigend-out__items__item
      display: block
    .user-nav--sigend-in__items__item
      display: none
  &--signed-in
    .user-nav--sigend-out__items__item
      display: none
    .user-nav--sigend-in__items__item
      display: block
  &-container
    text-align: right
  &__avatar
    padding: emCalc(2px)
    background-color: darken($header, 20%)
    border-radius: emCalc(25px)
    position: relative
    cursor: pointer
    &:hover, &:focus
      background-color: darken($header, 40%)
    &__dropdown
      color: $white
      line-height: emCalc(39px)
      margin: 0 emCalc(10px)
  &__items
    list-style: none outside none
    box-shadow: 0 .1em 0.2em $black
    border-radius: 4px
    z-index: 5
    padding: 0
    width: emCalc(150px)
    position: absolute
    right: 0
    &:before, &:after
      content: '.'
      position: absolute
      top: -10px
      right: 30px
      display: block
      width: 0
      height: 0
      font-size: 0
      line-height: 0
      border-style: solid
      border-width: 0 10px 10px
      border-color: transparent transparent $white
    &:before
      border-color: transparent transparent rgba(0, 0, 0, 0.1)
      border-width: 0 11px 11px
      margin-left: -1px
      margin-top: -1px
    &--hidden
      display: none
    &__item
      padding: 0 emCalc(10px)
      padding: 0
      margin: 0
      color: $text
      background-color: $white
      transition: color .1s ease-in-out, background-color .1s ease-in-out
      &:first-child
        border-radius: 4px 4px 0 0
      &:last-child
        border-radius: 0 0 4px 4px
      &:hover, &:focus
        color: $white
        background-color: $theme
      &__link
        color: inherit
        display: block
        padding: emCalc(10px)
        border-bottom: 1px solid rgba(0, 0, 0, 0.1)
        transition: none
        &:hover, &:focus
          color: inherit
          text-decoration: none

/**
 * Index site
 */
.index
  font-size: 1rem
  margin-top: 1em
  &__quote
    font-size: 1.5em
    margin-bottom: 1em
  &__action
    text-align: center
    margin-bottom: 1em
  &__image
    text-align: center


/**
 * Variables
 */
$text = #494949
$header = #394240
$link = #256e4d
$theme = #37a976
$alert = #f06b50
$success = #37a945
$white = #fff
$black = #000

/**
 * Basic
 */
body
  color: $text
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: 400
  background: $white

a
  color: $link
  body > header &
    color: $white

body:not(.color):not(.dark) a:not(.button):hover, body:not(.color):not(.dark) a:not(.button):active
  color: $theme

h1, h2, h3, h4, h5, h6
  font-weight: 300
  a
    color: $text

hr
  margin: 15px 0
  background: darken($white, 10%)

.radius
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
.text-shadow
  text-shadow:0 1px 1px rgba($black, 0.5)
.box-shadow
  -webkit-box-shadow: 0 .1em 0.2em $black
  -moz-box-shadow: 0 .1em 0.2em $black
  box-shadow: 0 .1em 0.2em $black

.bck
  &.theme-dark
    background-color: darken($theme, 10%)
  &.color
    background-color: $text
  &.dark
    background-color: $header
  &.theme
    background-color: $theme
    color: $white
  &.alert
    background-color: $alert !important
    color: $white
  &.color, &.dark
    color: darken($white, 10%)
    hr
      background: lighten($black, 20%)
      background: rgba($black, 0.2)
    a
      color: $white
      &.active
        color: $white !important

.color
  &.white
    color: $white !important
  &.light
    color: darken($white, 10%) !important
  &.theme
    color: $theme !important
  &.default
    color: $text !important
  &.alert
    color: $alert !important

/**
 * Form
 */
form, .form
  input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea
    background-color: $white
    color: $text
    border: 2px solid darken($white, 10%)
    -webkit-transition: border-color 200ms;
    -moz-transition: border-color 200ms;
    -ms-transition: border-color 200ms;
    -o-transition: border-color 200ms;
    transition: border-color 200ms;
    &:focus
      border-color: $theme
  .select:after
    color: darken($white, 10%)
  input[type="checkbox"], input[type="radio"]
    background: $white
    border: 2px solid darken($white, 10%)
    &:checked
      border-color: $theme
      &:after
        color: $theme
  label
    font-weight: 700

/**
 * Table
 */
table
  background: $white
  color: $text
  border:.1em solid darken($white, 10%)
  tr:nth-child(even) td
    background-color: darken($white, 5%)
  th
    background-color: darken($white, 10%)
    color: $white
  td.highlight
    background-color: $theme !important
    color: $white

/**
 * Button
 */
.button, button
  position: relative
  color: $white !important
  font-weight: 700 !important
  background-color: $theme
  text-shadow: rgba(0, 0, 0, 0.1) 0 1px 0
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
  -webkit-box-shadow: inset 0 .1em 0 rgba(255, 255, 255, 0.1), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
  -moz-box-shadow: inset 0 .1em 0 rgba(255, 255, 255, 0.1), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
  box-shadow: inset 0 .1em 0 rgba(255, 255, 255, 0.1), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
  -webkit-font-smoothing: antialiased
  &:hover
    -webkit-box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.15), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
    -moz-box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.15), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
    box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.15), inset 0 -.15em 0 rgba(0, 0, 0, 0.2), 0 .15em 0 rgba(0, 0, 0, 0.075)
  &:active
    -webkit-box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.3), inset 0 .15em 0 rgba(0, 0, 0, 0.1)
    -moz-box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.3), inset 0 .15em 0 rgba(0, 0, 0, 0.1)
    box-shadow: inset 0 0 5em rgba(0, 0, 0, 0.3), inset 0 .15em 0 rgba(0, 0, 0, 0.1)
  &.secondary
    background-color: darken($white, 25%)
    color: $white
  &.success
    background-color: $success
  &.alert
    background-color: $alert
  &:disabled, &.disabled
    background: rgba($white, 0.2)
    color: darken($white, 20%) !important
  &.loading
    .button__text
      visibility: hidden
    &:before
      content: ''
      display: block
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background: url('/images/loading.small.gif') no-repeat center center

.logo
  font-family: 'Grand Hotel', Helvetica, Arial, sans-serif
  font-weight: 400
  font-size: 3em

.index__title
  line-height: 1.5em

.index__user-story
  position: relative

.index__user-story__image
  @media screen and (min-width: 768px)
    position: absolute
    top: 0
    left: 50%
    right: 0
    bottom: 0
    background: url('/images/cool-cat.gif') no-repeat center center
    background-size: cover
    img
      display: none

.index__feature__icon
  font-size: 7em
  margin-bottom: 0.3em

.index__feature__text
  font-size: 1.4em
  text-transform: uppercase

.collection__title
  padding-right: 4em

.collection__add
  position: relative

.collection__add__button
  position: absolute
  right: 1em
  top: 1em

.collection__add__input-wrapper
  position: absolute
  left: 0
  right: 12em
  top: 0em
  height: 100%
  background: $white
  padding: 1.5em

.gif, .collection__list__item
  position: relative
  padding: 1em
  background: 50% 50% no-repeat url(/images/loading.gif)

.gif__overlay
  cursor: pointer
  position: absolute
  top: 1em
  left: 1em
  right: 1em
  bottom: 1em
  .gif &
    cursor: auto
  &:hover
    background: -moz-linear-gradient(180deg, rgba(0, 0, 0, 0.5) 15%, rgba(0, 0, 0, 0) 45%)
    background: -webkit-linear-gradient(180deg, rgba(0, 0, 0, 0.5) 15%, rgba(0, 0, 0, 0) 45%)
    background: -o-linear-gradient(180deg, rgba(0, 0, 0, 0.5) 15%, rgba(0, 0, 0, 0) 45%)
    background: -ms-linear-gradient(180deg, rgba(0, 0, 0, 0.5) 15%, rgba(0, 0, 0, 0) 45%)
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.5) 15%, rgba(0, 0, 0, 0) 45%)

.gif__overlay__actions
  position: absolute
  right: 0.3em
  top: 50%
  margin-top: -7em

.gif__overlay__actions--one
  margin-top: -2em

.gif__action
  cursor: pointer
  display: none
  color: darken($white, 10%)
  clear: right
  float: right
  font-size: 1.3em
  font-weight: 400
  width: 2.3em
  height: 2.3em
  border: 1px solid darken($white, 10%)
  -webkit-border-radius: 50%
  -moz-border-radius: 50%
  border-radius: 50%
  margin: 0.75em
  line-height: 2.3em
  text-align: center
  a& .icon
    margin: 0

  &:hover, &:hover .icon
    color: $white
    border-color: $white

  .gif__overlay:hover &
    display: inline

.collection__gif
  display: block
  background-size: cover
  background-repeat: no-repeat
  background-position: 50%
  height: 20em

.action-overlay
  position: absolute
  top: 1em
  left: 1em
  right: 1em
  bottom: 1em
  background-color: rgba($black, 0.6)

.action-overlay__actions
  position: absolute
  top: 50%
  left: 0
  right: 0
  margin-top: -3.5em
  text-align: center
  button
    margin: 1em
.overlay--confirm-delete__actions
  margin-top: -5.5em

.hideShowPassword-toggle
  cursor: pointer
  margin-right: 1em
  text-transform: uppercase
  font-size: 0.8em
  padding: 0.2em
  font-weight: 700

.message
  font-weight: 700
  text-transform: uppercase
  border-bottom-style: solid
  border-bottom-width: 0.1em

  &.error-message
    color: $alert
    border-bottom-color: $alert

  &.success-message
    color: $success
    border-bottom-color: $success

/**
 * Site header
 */
.site-header
  font-size: 1rem
  padding: .4em 0
  background: $header

.logo
  font-size: 2em
  font-weight: 400
  font-family: 'Grand Hotel', Helvetica, Arial, sans-serif
  text-shadow:0 1px 1px rgba($black, 0.5)
  color: $white
  text-decoration: none
  &:hover, &:focus
    color: darken($white, 10%)

.gif-nav
  font-size: 1rem
  text-align: center
  &__item
    height: 100%
    padding: 0
    display: inline-block
    &__link
      display: block
      height: 100%
      text-align: center
      color: $white
      font-weight: 700
      &:hover, &:focus
        color: $white
        background: darken($header, 20%)
  &--integrated
    margin: -.4em 0
    height: 3.5em
    &__item
      &__link
        line-height: 3.5em
        margin: 0 .2em
        padding: 0 2em
  &--independent
    height: auto
    background: lighten($header, 5%)
    &__item
      &__link
        padding: .4em 0
        &:hover, &:focus
          background: $header

.user-nav
  font-size: 1rem
  position: relative
  display: inline-block
  max-width: 100%
  &-container
    text-align: right
  &__avatar
    padding: emCalc(2px) emCalc(35px) emCalc(2px) emCalc(2px)
    background-color: darken($header, 20%)
    color: $white
    font-weight: 300
    border-radius: emCalc(25px)
    position: relative
    cursor: pointer
    height: emCalc(40px)
    line-height: emCalc(36px)
    &:hover, &:focus
      background-color: darken($header, 40%)
    &__username
      display: inline-block
      margin: 0 .5em
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
    &__dropdown
      color: $white
      line-height: emCalc(40px)
      margin: 0 emCalc(10px)
      position: absolute
      top: 0
      right: 0
  &__items
    list-style: none outside none
    box-shadow: 0 .1em 0.2em $black
    border-radius: 4px
    z-index: 5
    padding: 0
    width: emCalc(150px)
    position: absolute
    right: 0
    &:before, &:after
      content: '.'
      position: absolute
      top: -10px
      right: 30px
      display: block
      width: 0
      height: 0
      font-size: 0
      line-height: 0
      border-style: solid
      border-width: 0 10px 10px
      border-color: transparent transparent $white
    &:before
      border-color: transparent transparent rgba(0, 0, 0, 0.1)
      border-width: 0 11px 11px
      margin-left: -1px
      margin-top: -1px
    &--hidden
      display: none
    &__item
      padding: 0 emCalc(10px)
      padding: 0
      margin: 0
      color: $text
      background-color: $white
      transition: color .1s ease-in-out, background-color .1s ease-in-out
      &:first-child
        border-radius: 4px 4px 0 0
      &:last-child
        border-radius: 0 0 4px 4px
      &:hover, &:focus
        color: $white
        background-color: $theme
      &__link
        color: inherit
        display: block
        padding: emCalc(10px)
        border-bottom: 1px solid rgba(0, 0, 0, 0.1)
        transition: none
        &:hover, &:focus
          color: inherit
          text-decoration: none

.authentication-error
  font-size: 1rem
  text-align: center
  &--hidden
    display: none
  &__message
    padding: 1em 0

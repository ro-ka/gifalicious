/**
 * Button
 */
.button
  font-size: 1rem
  font-family: inherit
  line-height: 2.3em
  position: relative
  display: inline-block
  cursor: pointer
  color: $white
  font-weight: 700
  border: medium none
  border-radius: 4px
  outline: medium none
  text-decoration: none
  padding: 0 1em
  background-color: $theme
  text-align: center
  text-shadow: rgba(0, 0, 0, 0.1) 0 1px 0
  transition: background-color .2s ease-in-out
  &:hover, &:focus
    background-color: darken($theme, 10%)
    text-decoration: none
    color: $white
  &--large
    font-size: 1.333rem
  &--secondary
    background-color: darken($white, 25%)
    color: $white
    &:hover, &:focus
      background-color: darken($white, 35%)
  &--success
    background-color: $success
    &:hover, &:focus
      background-color: darken($success, 10%)
  &--alert
    background-color: $alert
    &:hover, &:focus
      background-color: darken($alert, 10%)
  &--disabled
    background-color: darken($white, 2%)
    color: darken($white, 20%)
  &--loading
    .button__text
      visibility: hidden
    &:before
      content: ''
      display: block
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background: url('/images/loading.small.gif') no-repeat center center

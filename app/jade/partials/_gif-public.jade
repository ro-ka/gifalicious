script#template__gif--public(type='text/x-handlebars-template')
  section.padding
    .row.margin-bottom
      .gif.small-12.columns.margin-bottom
        .gif__error.error-message.message.hide
        .gif__success.success-message.message.hide
        {{#if loggedin}}
        {{#if newgif}}
        .gif__overlay
          .gif__overlay__actions.gif__overlay__actions--one
            span.gif__action.gif__add(title='Add to collection')
              span.icon.plus
              img.loading.hide(src='/images/loading.small.gif')
        {{/if}}
        {{/if}}
        img.responsive-horizontal.box-shadow(src='{{url}}', alt='')
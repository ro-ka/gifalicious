//- Settings page for the user
script#template__settings(type='text/x-handlebars-template')
  section.settings
    .grid
      .small-12.columns
        h1 Settings
    form.form.grid.settings__change-password
      .small-12.large-8.large-centered.columns
        h2 Change password
      .small-12.large-8.large-centered.columns.settings__change-password__error.message.message--error.message--hidden
        | An error occured!
      .small-12.large-8.large-centered.columns.settings__change-password__success.message.message--success.message--hidden
        | Updated your password!
      .small-12.large-8.large-centered.columns
        label(for='settings__change-password__password--current') Current Password
        input#settings__change-password__password--current.settings__change-password__password--current(type='password', name='settings__change-password__password--current', required='required')
      .small-12.large-8.large-centered.columns
        label(for='settings__change-password__password--new') New Password
        input#settings__change-password__password--new.settings__change-password__password--new(type='password', name='settings__change-password__password--new', required='required')
      .small-12.large-8.large-centered.columns
        .form__actions
          button.button.form__actions__button.settings__change-password__submit(type='submit')
            span.button__text Change Password

    .grid
      hr.small-12.large-8.large-centered.columns

    form.form.grid.settings__delete-user
      .small-12.large-8.large-centered.columns
        h2 Delete Profile
      p.small-12.large-8.large-centered.columns
        strong DANGER!
        |  This will delete your profile and can not be undone!
      .small-12.large-8.large-centered.columns
        .form__actions
          button.button.button--alert.settings__delete-user__button(type='submit') Delete Profile

